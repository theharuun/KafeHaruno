﻿
@model KafeHaruno.Entities.User

<h2>User Details</h2>

<div>
    <h4>User Information</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Surname</dt>
        <dd class="col-sm-10">@Model.Surname</dd>

        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.Username</dd>

        <dt class="col-sm-2">Order Id</dt>
        <dd class="col-sm-10">
            @if (Model.Orders != null && Model.Orders.Any())
            {
                <ul>
                    @foreach (var order in Model.Orders)
                    {
                        <li>
                            His-Her Orders Detail: @order.Id, Order Payment: @order.OrderPayment, Table No: @order.TableId
                            <ul>
                                @foreach (var orderProduct in order.OrderProducts)
                                {
                                    <li>
                                        Product Name: @orderProduct.Product.ProductName,
                                        Unit Price: @orderProduct.Product.Price,
                                        Quantity: @orderProduct.Quantity,
                                        Total Price:@(orderProduct.Product.Price * orderProduct.Quantity)
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>No orders found.</p>
            }
        </dd>


    </dl>
</div>

<div>
    <a asp-action="Index" asp-controller="Admin" class="btn btn-primary">Back to List</a>
</div>
