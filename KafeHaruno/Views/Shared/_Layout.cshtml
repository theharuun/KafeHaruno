<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KafeHaruno</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KafeHaruno.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">KafeHaruno</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (Context.User.Identity.IsAuthenticated)
                        {
                            var userRole = Context.User.FindFirst("Role")?.Value; // Get the user role

                            <li class="nav-item">
                                @if (userRole == "Waiter/Waitress")
                                {
                                    <a class="nav-link text-dark" asp-controller="User" asp-action="SecurePage">Main Page</a>
                                }
                                else if (userRole == "Admin")
                                {
                                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="SecurePage">Main Page</a>
                                }
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (Context.User.Identity.IsAuthenticated)
                        {
                            var userRole = Context.User.FindFirst("Role")?.Value; // Get the user role

                            <li class="nav-item">
                                @if (userRole == "Waiter/Waitress")
                                {

                                    <a class="nav-link text-dark" asp-controller="User" asp-action="Index">Personal Page</a>
                               
                                }
                            </li>
                        }
                        <li class="nav-item ms-auto">
                            <!-- right push with ms-auto class -->
                            @await Html.PartialAsync("_LoginPartial")
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - KafeHaruno - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
